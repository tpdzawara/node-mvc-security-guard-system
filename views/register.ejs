<div class="register-parent">
    <div class="register">
     <div class="register-title">
         <img src="../img/Trust-me-logo.png" alt="Trust-me-logo">
         <h2>Create a new Adminstrator account</h2>
     </div>
     <form action="/admin/register" method="POST">
         <div class="form-group">
             <input type="name" 
              class="form-control 
              shadow-sm p-3 mb-5 bg-white rounded" 
              id="name" 
              aria-describedby="emailHelp"  
              placeholder="enter your username" 
              value="<%= typeof name != 'undefined' ? name : '' %>">
           </div>
         <div class="form-group">
           <input type="email" 
            class="form-control 
            shadow-sm p-3 mb-5 bg-white rounded" 
            id="email" 
            aria-describedby="emailHelp" 
            placeholder="enter your email"
            value="<%= typeof email != 'undefined' ? email : '' %>">
         </div>
         <div class="form-group">
           <input type="password" 
            class="form-control 
            shadow-sm p-3 mb-5 
            bg-white rounded" 
            id="password" 
            placeholder="enter your password"
            value="<%= typeof password != 'undefined' ? password : '' %>">
            <div class="form-group">
                <input type="password" 
                 class="form-control 
                 shadow-sm p-3 mb-5 
                 bg-white rounded" 
                 id="password" 
                 placeholder="confirm your password"
                 value="<%= typeof password != 'undefined' ? password : '' %>">
         </div>
         <button type="submit" class="btn">Register</button>
       </form>
       <p class="lead mt-4">Have An Account? <a href="/admin/login">Login</a></p>
    </div>
</div>