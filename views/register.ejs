
<!--====REGISTER SECTION====-->
 <div id="login-box">
  <div class="left">
    <h1>Sign up</h1>
    <% include ./partials/messages %>
    <form action="/admin/register" method="POST">
    <input 
    type="name"
     name="name" 
     id="name"
    placeholder="name" 
    value="<%= typeof name != 'undefined' ? name : '' %>"/>
    <input type="email" 
    name="email" 
    id="password"
    placeholder="E-mail" 
    value="<%= typeof name != 'undefined' ? name : '' %>"/>
    <input type="password" 
    name="password" 
    id="password"
    placeholder="Password" 
    value="<%= typeof name != 'undefined' ? name : '' %>"/>
    <input type="password" 
    name="password2" 
    id="password2"
    placeholder="Retype password" 
    value="<%= typeof name != 'undefined' ? name : '' %>"/>
    
    <button class="reg-batan" type="submit">Register</button>
  </form>
  </div>
  
  <div class="right">
      <img class="reg-img" src="/img/Trust-me-logo.png" alt="Trust-me-logo">
      <p class="lead mt-4">Have An Account? <a href="/admin/login">Login</a></p>
  </div>
</div>