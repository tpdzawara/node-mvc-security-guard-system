<div class="flex-dashboard">
    <sidebar>
        <div class="sidebar-title">
            <img src="../img/Trust-me-logo.png" alt="Trust-me-logo">
            <p><%= user.name %> </p>
        </div>
        <div class="menu">
            <ul>
                <li>
                    <a href="/clients/clients">
                        Clients</a>
                </li>
                <li>
                    <a href="/guard">
                        Guards</a>
                </li>
                <li>
                    <a href="#">
                        Staff</a>
                </li>
                <li>
                    <a href="/tracker">
                        Tracker</a>
                </li>
                <li>
                    <a href="/reports">
                        Reports</a>
                </li>
                <li>
                    <a href="/site">
                        Sites</a>
                </li>
                <li>
                    <a href="">
                        Inventory</a>
                </li>
                <li>
                    <a href="">
                        Scheduler</a>
                </li>
                <li>
                    <a href="">
                        Payroll</a>
                </li>
                <li>
                    <a href="">
                        Accounts</a>
                </li>
            </ul>
        </div>
    </sidebar>
    <main>
        <header>
            <a href="/">Dashboard</a>
            <a href="/admin/logout">Logout</a>
        </header>
        <div class="main-content">
            <% include ./partials/messages %>
            <form action="/clients/clients" method="POST">
                <div class="form-row">
                <div class="form-group col-md-6">
                    <div class="col">
                        <input type="text" 
                        id="client"
                        name="client"
                        class="clie form-control
                            shadow-sm p-3 mb-5 bg-white rounded"
                        placeholder="Client Name"
                        value="<%= typeof client != 'undefined' ? client : '' %>">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="col">
                        <input type="text"
                        id="contact"
                        name="contact" 
                        class="clie form-control
                            shadow-sm p-3 mb-5 bg-white rounded"
                            placeholder="Contact Name"
                            value="<%= typeof contact != 'undefined' ? contact : '' %>">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="col">
                        <input type="text" 
                        id="email"
                        name="email"
                        class="clie form-control
                            shadow-sm p-3 mb-5 bg-white rounded"
                            placeholder="Email"
                            value="<%= typeof email != 'undefined' ? email : '' %>">
                    </div>
                </div>
               
                <div class="form-group col-md-6">
                    <div class="col">
                        <input type="text" 
                        id="phone"
                        name="phone"
                        class="clie input-medium bfh-phone form-control
                            shadow-sm p-3 mb-5 bg-white rounded"
                            placeholder="Phone Number"
                            value="<%= typeof phone != 'undefined' ? phone : '' %>">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="col">
                        <input type="text" 
                        id="address"
                        name="address"
                        class="clie form-control
                            shadow-sm p-3 mb-5 bg-white rounded"
                            placeholder="Address"
                            value="<%= typeof address != 'undefined' ? address : '' %>">
                    </div>
                </div>
            </div><!--form-row div end-->
            <button type="submit" class="btn save-btn">Save Client</button>
        </form>
    </main>
</div>